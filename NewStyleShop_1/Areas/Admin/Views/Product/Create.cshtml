@model NewStyleShop_1.Models.ViewModel.ProductsViewModel
@using NewStyleShop_1.Extension
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Create Product</h2>
    </div>
</div>
<div class="table table-striped border">
    <div class="p-4 border rounded">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Name" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Name" class="form-control" />
                </div>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.MetaTittle" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.MetaTittle" class="form-control" />
                </div>
                <span asp-validation-for="Product.MetaTittle" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Code" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Code" class="form-control" />
                </div>
                <span asp-validation-for="Product.Code" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Description" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Description" class="form-control" />
                </div><span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Image"></label>
                </div>
                <div class="col-5">
                    <input type="file" name="files" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Price" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Price" class="form-control" />
                </div>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.PromotionPrice" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.PromotionPrice" class="form-control" />
                </div>
                <span asp-validation-for="Product.PromotionPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Quantity" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.IsMale" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.IsMale" class="form-control" />
                </div>
                <span asp-validation-for="Product.IsMale" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Top" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Product.Top" class="form-control" />
                </div>
                <span asp-validation-for="Product.Top" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Status" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input  asp-for="Product.Status" class="form-control" />
                </div>
                <span asp-validation-for="Product.Status" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Product.Category" class="control-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.Product.CategoryID" asp-items="Model.Categories.ToSelectListItem(Model.Product.CategoryID)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>



