@model List<NewStyleShop_1.Models.Product>

@if (Model.Count > 0)
{
    <table class="table table-striped " width=" 100%">
        <tr class="table-info">
            <th style="text-align:center; width:20%"></th>
            <th style="text-align:center:">
                <label asp-for="@Model.FirstOrDefault().Name"></label>
            </th>

            <th style="text-align:center:">
                <label asp-for="@Model.FirstOrDefault().Category.Name"></label>
            </th>

            <th style="text-align:center:">
                <label asp-for="@Model.FirstOrDefault().Price"></label>
            </th>

            <th style="text-align:center;"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="padding:50px;">
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-all-route-id="@item.ID">
                        <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
                    </a>
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Name)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Category.Name)
                </td>

                <td style="text-align:center">
                    @Html.DisplayFor(c => item.Price)
                </td>

                <td style="text-align:center">
                    <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.ID">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>

            </tr>
        }
    </table>

}
else
{
    <div>No item added to Shopping Cart...</div>
}